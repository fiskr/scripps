.notes, .notes a, #subhead, #subhead a {
	font-size: 16px;
	line-height: 24px;

	h4 {
		font-size: 21px;
		line-height: 21px;
		padding: 0 0 16px 0;		
	}

}

.about-designers {
	font-size: 14px;
	line-height: 16px;

	h4 {
		font-size: 21px;
		line-height: 21px;
		padding: 24px 0 16px 0;		
	}

	a{
		font-size: 14px;
		line-height: 16px;

	}

	br {
		line-height: 32px;
	}

}

.see-more{/*make this wider for long text*/
    overflow: hidden;
    padding:10px 0;
    margin: 24px 0 5px 5%;
    width: 90%;
    height: auto;
    font-family: arial;
    font-size:1.4em;
    line-height:1.2em;
	font-weight: bold;
	text-shadow: 0px 1px 1px rgba(256,256,256, 0.5);
    text-align: center;
	&:before{
		margin-right: 5px;
    	font-family: hgtv_iconsregular;
    	font-size: 16px;
   		text-shadow: 0px 1px 1px rgba(256,256,256, 0.5);
    	font-weight: normal;
    }
}
a.see-more {
    padding: 10px 0;
}

