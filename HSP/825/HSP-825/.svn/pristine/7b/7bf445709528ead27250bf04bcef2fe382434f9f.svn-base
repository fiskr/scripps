#nobanner {//this is for sections that have a super-section and the dropdown
	h1 {
	    line-height: 24px;
	    padding-top: 6px;

	    a {font-size: 24px;}
	}
	  }

#empty.page-head {
	border-bottom: none;
	min-height: 0;
	padding:0;


}

#dp-content {
	img {
		width: 90%;
		max-width: 400px;
	}
}

#content {
	.main-image {
		position: relative;
		width: 100%;
		max-width: 400px;
		a {
			font-size: inherit;
		}
		img {
			width: 100%;
			max-width: 400px;			
		}

		
		.view-gallery { 			
			position: absolute;
			height:16px;
			padding: 8px 0;
			background: black;
			background: rgba(0,0,0,.75);
			width:120px;
			left: 50%;
			margin-left: -60px;
			top: 50%;
			margin-top: -16px;
			font-family: arial;
    		font-size:1.4em;
    		line-height:1.2em;
			font-weight: bold;
			text-align: center;
			color: white;
			border-radius: @tab-radius;
			.drop-shadow(0 0 2px rgba(255,255,255,.5));

			&:before{
				margin-right: 5px;
    			font-family: hgtv_iconsregular;
    			font-size: 16px;
    			font-weight: normal;
			};
		}

	}

}

#author {
	font-size: 12px;
	color: #999;
	padding-bottom: 19px;
}

#credit, #byline, #credit a, #byline a {
	font-size: 12px;
	color: #999;
	padding: 10px 0;
	font-style: italic;
}
#credit a, #byline a {
	color: @link-color;
}

h1.headline {
	padding-bottom: 19px;
}

#psection{
	font-size: 12px;
	color: @heading-color;
	margin-bottom:-8px;
}




