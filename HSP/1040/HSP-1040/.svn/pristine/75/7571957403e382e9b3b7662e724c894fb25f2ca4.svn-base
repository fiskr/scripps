#show-head {
    margin-bottom: 0;
    border-bottom: none;
}

section > h1.section {
	padding: 15px 0 15px 10px;
	color: #386CB4;
	border-bottom: 1px solid #e5e5e5;
	font-size: 18px;
	font-weight: bold;
}

#show-head a {
    font-size: 18px;
}

.mini-lead.show-banner {
    min-height:88px;
    margin-bottom: 12px;
    
    > img {float:right; position:relative; z-index:1; height: 88px;}
    
    h2 {
	position:absolute;
	&:nth-child(2) {display:none;}
    }
}

.small-lead {
    padding-bottom: 24px;
    border-bottom: solid 1px #e5e5e5;
    margin-top: 24px;

    h2, h2 a {font-weight: bold;}

    p, a {
	font-size:16px;
	line-height:24px;
    }

    img {padding-bottom: 6px;}

    a:first-child {font-weight: bold; font-size: 18px; line-height: 24px;}

    p.more {margin-top: 6px;}

    p.more a:first-child {font-weight: normal; font-size: 14px;}

    a + p {margin-bottom: 6px;}

}

.mod {
    .dynlead-vid-wrap {
	clear:both; 
	padding-top:40px;
	margin-left:-5px;

	> object {
	    height: 225px !important;
	}
    }

    .generic-lead {
	clear:both; padding-top:10px;

	p, a {
	    font-size:1.6em;
	    line-height:24px;
	}

	h3 {
	    padding-bottom:10px;
	    font-size: 18px;
	    line-height: 24px;
	    font-weight: bold;
	}

	img {
	    padding-bottom: 6px;
	}

	.feature {
	    padding-bottom: 18px;
	    border-bottom: 1px solid #e5e5e5;


	}

	.secondary {

	    > div {
		clear:both;
		padding-top:16px;
		padding-bottom: 16px;
		border-bottom: 1px solid #e5e5e5;
		
		h3 {padding-bottom:5px; font-size: 14px; line-height: 16px;}

		img {float: left; padding-right: 12px;}

		p {font-size: 14px; line-height: 16px;}

		p > a {
		    font-size:14px;
		}
	    }
	    > hr {
		display:none;
	    }	    	    
	}
    }
}

.show-descr {
    clear:both; font-size:1.6em; line-height:24px; padding-top:25px;
}
