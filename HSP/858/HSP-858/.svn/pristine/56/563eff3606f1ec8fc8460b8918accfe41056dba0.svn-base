@font-face {
    font-family: 'hgtv_iconsregular';
    src: url('../imgs/hgtvicons-regular.eot');
    src: url('../imgs/hgtvicons-regular.eot?#iefix') format('embedded-opentype'),
	 url('../imgs/hgtvicons-regular.woff') format('woff'),
	 url('../imgs/hgtvicons-regular.ttf') format('truetype'),
         url('../imgs/hgtvicons-regular.svg#hgtv_iconsregular') format('svg');
    font-weight: normal;
    font-style: normal;

}

/*  Basic Icon Font Styles (from Font Awesome)
    ------------------------------------------------------- */
[class^="icon-"],
[class*=" icon-"] {
  font-family: "hgtv_iconsregular";
  font-weight: normal;
  font-style: normal;
  font-size: 16px;
  text-decoration: inherit;
  -webkit-font-smoothing: antialiased;
}

/* Sizing - Icons Optimized for use at 16px (and multiples of 16px)  */
.icon-2x {
  font-size: 32px;
}

.icon-3x {
  font-size: 48px;
}

.icon-4x {
  font-size: 64px;
}

/* Float Left/Right  */
.pull-right {
  float: right;
}

.pull-left {
  float: left;
}

[class^="icon-"].pull-left,
[class*=" icon-"].pull-left {
  margin-right: .3em;
}

[class^="icon-"].pull-right,
[class*=" icon-"].pull-right {
  margin-left: .3em;
}

/* List Alignment  */
li [class^="icon-"], 
.nav li [class^="icon-"], 
li [class*=" icon-"], 
.nav li [class*=" icon-"] {
  display: inline-block;
  width: 1.25em;
  text-align: center;
}


/*  When possible, HGTV icons map to the same unicode characters within the 
  Unicode Private Use Area (PUA) that Font Awesome uses for equivalent icons */

.icon-search:before               { content: "\f002"; }
.icon-zoom-in:before              { content: "\f00e"; }

.icon-time:before                 { content: "\f017"; }

.icon-flag:before                 { content: "\f024"; }

.icon-chevron-left:before         { content: "\f053"; }
.icon-chevron-right:before        { content: "\f054"; }
.icon-plus-sign:before            { content: "\f055"; }
.icon-remove-sign:before          { content: "\f057"; }

.icon-chevron-up:before           { content: "\f077"; }

.icon-twitter-sign:before         { content: "\f081"; }
.icon-facebook-sign:before        { content: "\f082"; }
.icon-comments:before             { content: "\f086"; }

.icon-reorder:before              { content: "\f0c9"; }

.icon-pinterest-sign:before       { content: "\f0d3"; }
.icon-google-plus-sign:before     { content: "\f0d4"; }
.icon-caret-down:after           { content: "\f0d7"; }
.icon-caret-up:before             { content: "\f0d8"; }

.icon-circle:before               { content: "\f111"; }

/* For icons that have no equivalent in Font Awesome, Unicode PUA values have been used starting at f500 */
.icon-hgtv-logo:before            { content: "\f500"; }
.icon-plus-sign-small:before      { content: "\f501"; }
.icon-email-sign:before           { content: "\f502"; }
.icon-hgtv-gardens-logo:before    { content: "\f503"; }
.icon-swipe:before                { content: "\f504"; }
.icon-stumbleupon-sign:before     { content: "\f505"; }






