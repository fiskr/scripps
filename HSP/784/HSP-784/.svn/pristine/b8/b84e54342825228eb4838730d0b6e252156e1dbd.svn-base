.crsl{position:relative;padding-bottom:21px;margin-bottom: 42px;}
/* hiding auto-generated plugin markup - using custom btn class ovverride */
.crsl .prev-btn, .crsl .next-btn {display:none;}
.crsl .btn {position:absolute;top:75px;}
.crsl .btn.prev {left:0;}
.crsl .btn.next {right:0;}
.crsl .nav{position:absolute;bottom:21px;left:42px;}
.crsl .controls{position:absolute;}
.crsl .controls span {display:inline-block;margin-right:5px;width:9px;height:8px;text-indent:-9999em;background:url('../imgs/se/sprite.png') -1px -1343px;cursor:pointer;overflow:hidden;}
.crsl .controls span:hover, .crsl .controls span.active {background-position:-1px -1445px;}
.crsl .crsl-wrap {margin:7px 0 7px 42px; width:565px;}
.crsl .crsl-wrap img{display:block;margin-bottom:7px;}
.crsl .crsl-wrap ul .crsl-item {width:132px;margin:0 2px;height:auto !important;}
.crsl .crsl-wrap span {width:92%;display:block;font-weight:bold;}
.crsl .crsl-wrap span.ico {width:36px;right:14px;bottom:4px;}
.crsl .crsl-wrap cite {float:left;}
.crsl .vid-btn, .crsl .gal-btn, .crsl .enl-btn {float:none;}
.crsl .hr {position:absolute;bottom:-21px;width:100%;}

/* Only for inline video */
.pod.inline h4,
.pod.inline cite {color:#fff;}
.pod.inline > p {color:#e5e5e5;}
.pod.inline .crsl {width:622px;}
.pod.inline .crsl-wrap ul li {width:92px;margin-right:7px;padding-top:5px;}
.pod.inline .crsl-wrap ul li a span {font-size:.786em;line-height:normal;color:#69C0E7;font-weight:normal;}
.pod.inline .crsl-wrap ul li a:hover span {color:#5EC7FF;}
.pod.inline .crsl-wrap ul li.playing {width:100px;position:relative;top:-5px;margin-right:14px;}
.pod.inline .crsl-wrap ul li.playing a span {color:#fff;cursor:default;margin-top:4px;}
.pod.inline .crsl-wrap ul li.playing a.vid-btn {border:4px solid #FFF;cursor:default;}
.pod.inline .crsl-wrap ul li.playing a.vid-btn span {display:none;}
.pod.inline .crsl-wrap ul li span.cap {clear:left;float:none;font-size:.786em;}
.pod.inline .crsl .controls {top:15px;}
.pod.inline .btn.prev.disabled,
.pod.inline .btn.next.disabled {visibility:hidden;}

.pod.inline .crsl .nav .controls {position:static;}
.pod.inline .crsl .nav {text-align: center; display: block; overflow: hidden; position:static; }