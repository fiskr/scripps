#hg-bd .tentpole-container {
    position:relative;
    *z-index: 4;
    }

#tentpole-countdown.in-header {
    height:90px;
    width:160px;
    color:#fff;
    border:solid 1px #000;
    border-radius:4px;
    position:absolute;
    top:28px;
    right:14px;
    background:#333333;
    background:url(data:image/svg+xml;base64,);
    background-image:-ms-linear-gradient(top, #333333 0%, #000000 100%);
    background-image:-moz-linear-gradient(top, #333333 0%, #000000 100%);
    background-image:-o-linear-gradient(top, #333333 0%, #000000 100%);
    background-image:-webkit-gradient(linear, left top, left bottom, color-stop(0, #333333), color-stop(1, #000000));
    background-image:-webkit-linear-gradient(top, #333333 0%, #000000 100%);
    background-image:linear-gradient(top, #333333 0%, #000000 100%);
    filter:progid:DXImageTransform.Microsoft.gradient(startColorstr = '#333333', endColorstr = '#000000', GradientType = 0);
    }

#tentpole-countdown.in-header .counter_wrap {
    margin:6px;
    }

#tentpole-countdown.in-header .cd_days {
    font-size:10px;
    color:#ababab;
    float:left;
    margin-left:-3px;
    font-weight:bold;
    font-family:'Trebuchet MS', sans-serif;
    }

#tentpole-countdown.in-header #cdDays {
    width:36px;
    text-align:right;
    *text-align:left;
    font-size:21px;
    line-height:25px;
    letter-spacing:6px;
    color:#fff;
    padding-left:7px;
    background:#000 url(data:image/jpeg;base64,) top center repeat-y;
    border:solid 1px #2f2f2f;
    border-radius:4px;
    -moz-border-radius:4px;
    -webkit-border-radius:4px;
    display:inline-block;
    }

#tentpole-countdown.in-header .cd_time {
    font-size:14px;
    font-weight:normal;
    line-height:25px;
    color:#fff;
    padding:0 7px;
    text-align:center;
    background-color:#000;
    border:solid 1px #2f2f2f;
    border-radius:4px;
    float:right;
    }

#tentpole-countdown.in-header #cd_additional_text {
    font-size:11px;
    line-height:12px;
    margin:10px 7px 7px;
    }

#tentpole-countdown.in-header #cd_additional_text p {
    margin:4px 0;
    }

#tentpole-countdown.in-header #cd_additional_text a,
#tentpole-countdown.in-header #cd_additional_text a:visited {
    color:#99cccc
    }
